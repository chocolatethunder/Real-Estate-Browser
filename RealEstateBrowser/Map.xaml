<UserControl x:Class="RealEstateBrowser.SwitchMapViews"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
    Width="1024" Height="768">
    <Grid x:Name="LayoutRoot" Background="White">
        <m:Map x:Name="myMap" CredentialsProvider="V2kFRDvqWZA4pjiFc2LP~LmH_e_4YsfwRsT6Q1YaK0w~AqSXPJJcR4Z-hZFMqvlc9eBDs4765iD2FzA8KL77T4T6bhwVDY7x2NmEqsRgnSq0" 
               Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Padding="5"               
               Center="51.0486,-114.0708,0.0000" ZoomLevel="11.000" AnimationLevel="None" Mode="Road">
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" 
                    Background="Transparent" BorderBrush="Transparent"
                    Height="81" Width="80" Click="Home_Button_Click">
                <StackPanel>
                    <Image Source="pack://application:,,,/Resources/HomeIcon.png"></Image>
                </StackPanel>
            </Button>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        Margin="30,0,0,60">
                <Button Name="BedButton" Width="60" Height="60" Click="Show_Bed_Popup">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Resources/BedRect.png"></Image>
                    </StackPanel>
                </Button>
                <Button Width="60" Height="60">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Resources/BathRect.png"></Image>
                    </StackPanel>
                </Button>
                <Button Width="60" Height="60">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Resources/HouseTypeRect.png"></Image>
                    </StackPanel>
                </Button>
                <Button Width="60" Height="60">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Resources/HeartRect.png"></Image>
                    </StackPanel>
                </Button>
                <Button Width="60" Height="60">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Resources/CompareRect.png"></Image>
                    </StackPanel>
                </Button>
                <Button Width="60" Height="60">
                    <StackPanel>
                        <Image Source="pack://application:,,,/Resources/SettingsRect.png"></Image>
                    </StackPanel>
                </Button>
            </StackPanel>
            <Popup Name="BedPopup"
                   PlacementTarget="{Binding ElementName=BedButton}" Placement="Top"
                   HorizontalOffset="0" VerticalOffset="-10">
                <StackPanel Background="PaleGreen" Width="200">
                    <Label HorizontalAlignment="Center">Click to hide</Label>
                    <Button Click="Hide_Bed_Popup" Margin="10">Hide</Button>
                </StackPanel>
            </Popup>
        </m:Map>
    </Grid>
</UserControl>